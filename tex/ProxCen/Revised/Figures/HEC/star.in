# The host star, Proxima Cen
sName	        star		                    # Body's name
saModules	    stellar                     # Modules to apply, exact spelling required
cColor        c91111

# Output
saOutputOrder Time -Luminosity -LXUVStellar -Radius Temperature

# Physical Parameters
dMass         0.12                        # Mass, solar masses
dAge          1e6
dObliquity    0		
dRotPeriod    -83.5                       # Rotation period, negative -> days
dRadGyra      0.5                         # Radius of gyration (moment of inertia constant)

# STELLAR Parameters
sStellarModel proximacen                  # Stellar evolutin model: `baraffe` or `none`
bHaltEndBaraffeGrid 0
dSatXUVFrac   1.e-3                       # Saturation level of the XUV luminosity
dSatXUVTime   -1.